{
    "info": {
        "description": "API for recording Corona test results and providing a statistic.",
        "version": "1.0.0",
        "contact": {
            "email": "Andreas.Zachariae@gmail.com"
        },
        "title": "Corona Test API"
    },
    "servers": [
        {
            "description": "Testing",
            "url": "http://localhost:8080/"
        },
        {
            "description": "Flask",
            "url": "http://127.0.0.1:5000/"
        }
    ],
    "tags": [
        {
            "name": "testresult",
            "description": "Corona test results"
        },
        {
            "name": "statistics",
            "description": "Corona tests statistics"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "description": "Hello World!",
                "responses": {
                    "200": {
                        "description": "Succesfully helloed to world!",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Hello World!"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sum/{number1}/{number2}": {
            "get": {
                "description": "Sum of two integers",
                "parameters": [
                    {
                        "in": "path",
                        "name": "number1",
                        "description": "First number to add",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "in": "path",
                        "name": "number2",
                        "description": "Second number to add",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Succesfully added both numbers!"
                    }
                }
            }
        }
    },
    "openapi": "3.0.2",
    "components": {
        "schemas": {
            "Statistics": {
                "type": "object",
                "properties": {
                    "numberOfTests": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}